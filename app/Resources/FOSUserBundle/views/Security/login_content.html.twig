{% trans_default_domain 'FOSUserBundle' %}
    {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("bundles/recipe/css/custom.css") }}">
    {% endblock %}
    
    {% block body %}
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

                <div class="login">
                  <div class="login-header">
                    <h1>{{ 'layout.login'|trans }}</h1>
                  </div>
                    
                  <div class="login-form">
                    <div class="input-group margin-bottom-20">
                        <label for="username"><strong>{{ 'security.login.username'|trans }}</strong></label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="input-group margin-bottom-20">
                        <label for="password"><strong>{{ 'security.login.password'|trans }}</strong></label>
                            <input type="password" id="password" name="_password" required="required" />
                    </div>
                    {% if error %}
                        <div id="error"><strong>{{ error.messageKey|trans(error.messageData, 'Error') }}</strong></div>
                    {% endif %}
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />                    <br>                    
                        <a class="sign-up" href=" {{ path ("fos_user_registration_register") }}">{{ 'registration.submit'|trans }}</a>
                        <br>
                        <h6 class="no-access">{{ 'security.login.username' | trans }}</h6>
                  </div>
                </div>
                <div class="error-page">
                    <div>Accede a nuestra p√°gina y solicita <a href="{{ path('pagina', { nombrePagina:'ayuda' } ) }}"> ayuda</a></div>
                </div>
        </form>
    
    {% endblock %}
