{% extends 'base.html.twig' %}
    {% block body %}
        <div id="gtco-subscribe">
            <div class="gtco-container">
                <div class="row animate-box">
                    <div id="subscribe" class="col-md-8 col-md-offset-2 text-center gtco-heading">
                        <h2 class="cursive-font">{% trans %} nosotros.suscribe {% endtrans %}</h2>
                        <p>{% trans %} nosotros.noticias {% endtrans %}</p>
                    </div>
                </div>
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2">
                        <form class="form-inline" action="/email">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="email" class="sr-only" id="sendmail">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <button type="submit" class="btn btn-default btn-block">{% trans %} nosotros.suscripcion {% endtrans %}</button>
                                <br><br>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row animate-box" id="condiciones">
                    <strong><p> {% trans %} nosotros.nos {% endtrans %}</p></strong>
                </div>
            </div>
        </div>
    {% endblock %}
