{% extends 'base.html.twig' %}
    {% block body %}
        <div id="gtco-counter" class="gtco-section">
            <h2 class="cursive-font primary-color">{{ recipe.name }}</h2><br>
            <div class="gtco-container">
                
                <div class="container">                    
                    <div class="col-md-12 ">
                        <div class="col-xs-4"  id="ingredientrecipe">
                            <h3>{{ recipe.descripcion }}</h3> <br> <br>
                            <h2>Ingredientes</h2>
                            <ul>
                                {%for recipeingredient in recipe.recipeingredients %}
                                    <li>{{ recipeingredient.ingredient.name}}</li>
                                {%endfor%}
                            </ul>                            
                        </div>
                        <div id="imagerecipe" class="col-xs-8">
                            {% set runtimeConfig = {"thumbnail": {"size": [440, 440] }} %} 
                            <img src="{{ asset('uploads/images/recipes/' ~ recipe.image) | imagine_filter('my_thumb', runtimeConfig) }}"> <br>
                            <strong>Comensales: {{ recipe.diners }}</strong><br>
                            <strong>Tiempo de receta: {{ recipe.time }} </strong><br>
                            <strong>Categor√≠a: {{ recipe.category }} </strong><br>
                        </div>
                    </div>
                </div>
                <div class="row">                    
                    <div class="col-md-12 col-sm-3 animate-box" data-animate-effect="fadeInUp">
                        <div class="feature-center">
                            <span class="counter-label">{{ recipe.elaboracion }}</span>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-3 animate-box" data-animate-effect="fadeInUp">
                        <div class="feature-center">
                            <iframe width="560" height="315" src="https://www.youtube.com/embed/hknVVMfMzPo" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-3 animate-box" data-animate-effect="fadeInUp">
                        <div class="feature-center">
                            <a href="{{ path('show_recipe_pdf', {"id":recipe.id} ) }}"> Guardar PDF</a> 
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-3 animate-box" data-animate-effect="fadeInUp">
                        <div class="feature-center">
                            <button>##Enviar##</button>
                        </div>
                    </div>
                </div>
            </div>
	</div>
        
        
        
        
        
        
        
    {% endblock %}
    